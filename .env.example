# rebbe.dev Configuration
# Copy this file to .env and fill in your values

# Gateway Selection (vercel or openrouter, defaults to vercel)
GATEWAY=vercel

# Vercel AI Gateway (default)
# Get your key at https://vercel.com/account/ai-gateway
AI_GATEWAY_API_KEY=your_api_key_here

# OpenRouter API Key (alternative gateway)
# Get your key at https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Base URL (optional, defaults to https://openrouter.ai/api/v1)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LLM Model (optional, defaults to anthropic/claude-sonnet-4-20250514)
# Works with both gateways using provider/model format
LLM_MODEL=anthropic/claude-sonnet-4-20250514

# ElevenLabs Text-to-Speech (for speak button on messages)
# Get your API key at https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# Voice ID (optional, defaults to hQkoM7ZD59w5rbeIqZY4)
# Browse voices at https://elevenlabs.io/app/voice-library
ELEVENLABS_VOICE_ID=hQkoM7ZD59w5rbeIqZY4

# Debug mode (optional)
DEBUG=false

# WorkOS SSO Configuration (required for authentication)
# Get your keys at https://dashboard.workos.com
WORKOS_API_KEY=your_workos_api_key_here
WORKOS_CLIENT_ID=your_workos_client_id_here

# Session secret key (required - generate a random 32+ character string)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET_KEY=change-me-to-a-random-string

# WorkOS redirect URI (should match your WorkOS dashboard configuration)
WORKOS_REDIRECT_URI=http://localhost:8613/auth/callback

# Database Configuration (Vercel Postgres / Neon)
# When using Vercel Postgres, this is set automatically as POSTGRES_URL
# For local development, you can use a local Postgres instance or Neon
DATABASE_URL=your_database_url_here

# For uses requiring a connection without pgbouncer
DATABASE_URL_UNPOOLED=your_database_url_unpooled_here

# Parameters for constructing your own connection string
PGHOST=your_pghost_here
PGHOST_UNPOOLED=your_pghost_unpooled_here
PGUSER=your_pguser_here
PGDATABASE=your_pgdatabase_here
PGPASSWORD=your_pgpassword_here

# Parameters for Vercel Postgres Templates
POSTGRES_URL=your_postgres_url_here
POSTGRES_URL_NON_POOLING=your_postgres_url_non_pooling_here
POSTGRES_USER=your_postgres_user_here
POSTGRES_HOST=your_postgres_host_here
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DATABASE=your_postgres_database_here
POSTGRES_URL_NO_SSL=your_postgres_url_no_ssl_here
POSTGRES_PRISMA_URL=your_postgres_prisma_url_here

# Neon Auth environment variables for Next.js
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id_here
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_stack_publishable_client_key_here
STACK_SECRET_SERVER_KEY=your_stack_secret_server_key_here